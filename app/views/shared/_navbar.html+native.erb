<nav class="flex flex-wrap items-center justify-between text-sm z-10" data-controller="toggle" data-action="toggle-nav-bar@window->toggle#toggle">
  <div class="hidden fixed top-0 left-0 w-full px-4 py-2 bg-white dark:bg-gray-800 shadow-md"
        data-toggle-target="toggleable"
        data-transition-enter="transition-all ease-linear duration-300"
        data-transition-enter-from="opacity-0 h-0"
        data-transition-enter-to="opacity-100"
        data-transition-leave="transition-all ease-linear duration-300"
        data-transition-leave-from="opacity-100"
        data-transition-leave-to="opacity-0">
    <div class="lg:flex-grow">
      <%= render "shared/left_nav" %>
    </div>
      <div class="absolute inset-x-0 top-1/2 -z-10 -translate-y-1/2 transform-gpu overflow-hidden opacity-30 blur-3xl"
      aria-hidden="true">
      <div class="ml-[max(50%,38rem)] aspect-[1313/771] w-[82.0625rem] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc]"
        style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
      </div>
    </div>
    <div
      class="absolute inset-x-0 top-0 -z-10 flex transform-gpu overflow-hidden pt-32 opacity-25 blur-3xl sm:pt-40 xl:justify-end"
      aria-hidden="true">
      <div
        class="ml-[-22rem] aspect-[1313/771] w-[82.0625rem] flex-none origin-top-right rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] xl:ml-0 xl:mr-[calc(50%-12rem)]"
        style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
      </div>
    </div>
    <div>
      <%= render "shared/right_nav" %>

      <% if user_signed_in? %>
        <!-- Mobile menu -->
        <div class="mt-2 pt-4 pb-3 border-t border-gray-200 dark:border-gray-700">
          <div class="flex items-center px-2">
            <div class="flex-shrink-0">
              <%= account_avatar current_account, include_user: true, class: "rounded-full h-10 w-10" %>
            </div>
            <div class="ml-3">
              <div class="text-base font-medium text-gray-800 dark:text-gray-200"><%= current_account.name %></div>
            </div>
            <%= link_to notifications_path,
              class: "ml-auto bg-white dark:bg-gray-800 flex-shrink-0 p-1 rounded-full text-gray-400 hover:text-gray-500 dark:text-gray-200 dark:hover:text-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-800",
              data: {
                controller: "notifications",
                notifications_account_id_value: current_account.id,
                notifications_account_unread_value: @account_unread,
                notifications_total_unread_value: @total_unread,
              } do %>
              <span class="sr-only">View notifications</span>
              <svg class="h-6 w-6" x-description="Heroicon name: outline/bell" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
              </svg>
            <% end %>
          </div>
          <div class="mt-3 space-y-1">
            <%= link_to t(".profile"), edit_user_registration_path, class: 'block p-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-gray-400 dark:hover:bg-gray-700' %>
            <%= link_to t(".accounts"), accounts_path, class: 'block p-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-gray-400 dark:hover:bg-gray-700' %>
            <%= link_to t(".sign_out"), destroy_user_session_path, method: :delete, class: 'block p-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-gray-400 dark:hover:bg-gray-700',
              "data-controller": "turbo-native--sign-out", "data-action": "turbo-native--sign-out#signOut" %>
          </div>
        </div>

      <% else %>
        <div class="flex items-center gap-4 mt-2">
          <%= link_to t(".log_in"), new_user_session_path, class: "btn btn-light-gray btn-block dark:text-gray-200" %>
          <%= link_to t(".sign_up"), new_user_registration_path, class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</nav>
